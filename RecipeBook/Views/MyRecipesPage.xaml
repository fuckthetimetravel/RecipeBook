<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.MyRecipesPage"
             Title="My Recipes"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Верхняя панель -->
        <Grid Grid.Row="0" ColumnDefinitions="*,Auto,Auto" Padding="0,0,0,10">
            <Label Text="My Recipes"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryAccent}"
                   VerticalOptions="Center" />

            <Button Grid.Column="1"
                    Text="Refresh"
                    Command="{Binding LoadRecipesCommand}"
                    BackgroundColor="{StaticResource SecondaryAccent}"
                    TextColor="White"
                    CornerRadius="10"
                    Margin="0,0,10,0" />

            <Button Grid.Column="2"
                    Text="Add Recipe"
                    Command="{Binding AddRecipeCommand}"
                    BackgroundColor="{StaticResource ButtonColor}"
                    TextColor="White"
                    CornerRadius="10" />
        </Grid>

        <!-- Список рецептов -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Recipes}"
                        Margin="0,10,0,0"
                        EmptyView="No recipes found. Add your first recipe!">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                           Padding="15"
                           CornerRadius="16"
                           BackgroundColor="{StaticResource CardBackground}"
                           HasShadow="True">

                        <Grid RowDefinitions="Auto,Auto"
                              ColumnDefinitions="*,Auto">

                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding Title}"
                                   FontAttributes="Bold"
                                   FontSize="16"
                                   TextColor="{StaticResource TextColor}" />

                            <Label Grid.Row="1"
                                   Grid.Column="0"
                                   Text="{Binding Description}"
                                   TextColor="{StaticResource TextColor}"
                                   LineBreakMode="TailTruncation"
                                   MaxLines="2" />

                            <Button Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Text="View"
                                    BackgroundColor="{StaticResource SecondaryAccent}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    VerticalOptions="Center"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RecipeTappedCommand}"
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Ошибка -->
        <Label Grid.Row="2"
               Text="{Binding ErrorMessage}"
               TextColor="Red"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

        <!-- Индикатор загрузки -->
        <ActivityIndicator Grid.RowSpan="3"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />
    </Grid>
</ContentPage>
