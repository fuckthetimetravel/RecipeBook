<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeBook.Views.LoginPage"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25" VerticalOptions="Center" HorizontalOptions="Center">

            <Frame CornerRadius="20"
                   Padding="25"
                   BackgroundColor="{StaticResource CardBackground}"
                   HasShadow="True"
                   WidthRequest="350">

                <VerticalStackLayout Spacing="18">

                    <Label Text="Recipe Book"
                           FontSize="32"
                           FontAttributes="Bold"
                           TextColor="{StaticResource PrimaryAccent}"
                           HorizontalOptions="Center" />

                    <Label Text="Login to your account"
                           FontSize="18"
                           TextColor="{StaticResource TextColor}"
                           HorizontalOptions="Center" />

                    <Entry Placeholder="Email"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           TextColor="{StaticResource TextColor}"
                           HeightRequest="45"/>

                    <Entry Placeholder="Password"
                           Text="{Binding Password}"
                           IsPassword="True"
                           TextColor="{StaticResource TextColor}"
                           HeightRequest="45"/>

                    <Label Text="{Binding ErrorMessage}"
                           TextColor="Red"
                           FontSize="14"
                           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

                    <Button Text="Login"
                            Command="{Binding LoginCommand}"
                            BackgroundColor="{StaticResource ButtonColor}"
                            TextColor="White"
                            CornerRadius="12"
                            HeightRequest="45" />

                    <Button Text="Don't have an account? Register"
                            Command="{Binding RegisterCommand}"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource SecondaryAccent}" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
