<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.FavoriteRecipesPage"
             Title="Favorite Recipes"
             BackgroundColor="{StaticResource BackgroundColor}">


    <Grid RowDefinitions="Auto,*,Auto" Padding="20">

        <!-- Refresh Button -->
        <Button Grid.Row="0"
            Text="Refresh"
            Command="{Binding LoadFavoriteRecipesCommand}"
            BackgroundColor="{StaticResource SecondaryAccent}"
            TextColor="White"
            CornerRadius="10"
            HorizontalOptions="End"
            HeightRequest="40" />

        <!-- Favorite Recipes List -->
        <CollectionView Grid.Row="1"
                    ItemsSource="{Binding Recipes}"
                    Margin="0,20,0,0"
                    EmptyView="No recipes found. Try a different search or filter.">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame Margin="0,0,0,10"
                 Padding="0"
                 BackgroundColor="{StaticResource CardBackground}"
                 CornerRadius="16"
                 HasShadow="True">
                        <VerticalStackLayout Spacing="10" Padding="15">

                            <Border Stroke="{StaticResource SecondaryAccent}" HeightRequest="120">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="12" />
                                </Border.StrokeShape>
                                <!-- Use StringNotEmptyConverter to determine if image should be visible -->
                                <Image Source="{Binding ImageBase64, Converter={StaticResource Base64ToImageConverter}}"
                       Aspect="AspectFill"
                       IsVisible="{Binding ImageBase64, Converter={StaticResource StringNotEmptyConverter}}" />
                            </Border>

                            <Grid RowDefinitions="Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0"
                       Grid.Column="0"
                       Text="{Binding Title}"
                       FontAttributes="Bold"
                       FontSize="16"
                       TextColor="{StaticResource TextColor}" />
                                <Label Grid.Row="1"
                       Grid.Column="0"
                       Text="{Binding Description}"
                       LineBreakMode="TailTruncation"
                       MaxLines="3"
                       TextColor="{StaticResource TextColor}" />
                                <Button Grid.RowSpan="2"
                        Grid.Column="1"
                        Text="View"
                        Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RecipeTappedCommand}"
                        CommandParameter="{Binding .}"
                        BackgroundColor="{StaticResource SecondaryAccent}"
                        TextColor="White"
                        CornerRadius="10"
                        VerticalOptions="Center" />
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Error Message -->
        <Label Grid.Row="2"
           Text="{Binding ErrorMessage}"
           TextColor="Red"
           IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="3"
                       IsRunning="{Binding IsBusy}"
                       IsVisible="{Binding IsBusy}"
                       HorizontalOptions="Center"
                       VerticalOptions="Center" />
    </Grid>
</ContentPage>
