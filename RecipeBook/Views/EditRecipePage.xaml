<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.EditRecipePage"
             Title="Edit Recipe">

    <ContentPage.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
        <converters:IndexToStepNumberConverter x:Key="IndexToStepNumberConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Recipe Image -->
            <Frame IsClippedToBounds="True" CornerRadius="10" Padding="0" HeightRequest="200" 
                   IsVisible="{Binding SelectedImageBase64, Converter={StaticResource StringToBoolConverter}}">
                <Image Aspect="AspectFill" 
                       Source="{Binding SelectedImageBase64, Converter={StaticResource Base64ToImageConverter}}" />
            </Frame>

            <Button Text="Change Image" Command="{Binding PickImageCommand}" />

            <!-- Recipe Title -->
            <Label Text="Title" FontAttributes="Bold" />
            <Entry Text="{Binding Title}" Placeholder="Recipe title" />

            <!-- Recipe Description -->
            <Label Text="Description" FontAttributes="Bold" />
            <Editor Text="{Binding Description}" 
                    Placeholder="Recipe description" 
                    HeightRequest="100" />

            <!-- Ingredients Section -->
            <Label Text="Ingredients" FontAttributes="Bold" Margin="0,10,0,0" />

            <CollectionView ItemsSource="{Binding Ingredients}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnDefinitions="*, Auto, Auto">
                            <Label Text="{Binding Name}" Grid.Column="0" VerticalOptions="Center" />
                            <Label Text="{Binding Quantity}" Grid.Column="1" VerticalOptions="Center" />
                            <Button Text="✕" 
                                    Grid.Column="2" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIngredientCommand}" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#C75450"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Padding="0" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Ingredient -->
            <Grid ColumnDefinitions="*, Auto, Auto">
                <Entry Placeholder="Ingredient name" Text="{Binding NewIngredientName}" Grid.Column="0" />
                <Entry Placeholder="Quantity" Text="{Binding NewIngredientQuantity}" Grid.Column="1" WidthRequest="100" />
                <Button Text="+" 
                        Grid.Column="2" 
                        Command="{Binding AddIngredientCommand}" 
                        BackgroundColor="#5B8C5A"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0" />
            </Grid>

            <!-- Steps Section -->
            <Label Text="Steps" FontAttributes="Bold" Margin="0,10,0,0" />

            <CollectionView ItemsSource="{Binding Steps}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="5" ColumnDefinitions="Auto, *, Auto">
                            <Label Text="{Binding ., Converter={StaticResource IndexToStepNumberConverter}, ConverterParameter={Binding Source={RelativeSource AncestorType={x:Type CollectionView}}, Path=ItemsSource}}" 
                                   Grid.Column="0" 
                                   FontAttributes="Bold"
                                   VerticalOptions="Center" />
                            <Label Text="{Binding Text}" 
                                   Grid.Column="1" 
                                   Margin="5,0,0,0"
                                   VerticalOptions="Center" />
                            <Button Text="✕" 
                                    Grid.Column="2" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveStepCommand}" 
                                    CommandParameter="{Binding .}" 
                                    BackgroundColor="#C75450"
                                    WidthRequest="40"
                                    HeightRequest="40"
                                    Padding="0" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Add Step -->
            <Grid ColumnDefinitions="*, Auto">
                <Entry Placeholder="Step description" Text="{Binding NewStepText}" Grid.Column="0" />
                <Button Text="+" 
                        Grid.Column="1" 
                        Command="{Binding AddStepCommand}" 
                        BackgroundColor="#5B8C5A"
                        WidthRequest="40"
                        HeightRequest="40"
                        Padding="0" />
            </Grid>

            <!-- Save Button -->
            <Button Text="Save Changes" 
                    Command="{Binding SaveRecipeCommand}" 
                    BackgroundColor="#5B8C5A"
                    Margin="0,20,0,0" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red" 
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>