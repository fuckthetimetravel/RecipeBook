<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeBook.Views.RegistrPage"
             BackgroundColor="#A38B7D"
             Title="Register">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20" 
                             HorizontalOptions="Center" VerticalOptions="Center">

            <Frame BackgroundColor="#4A3F35" Padding="25"
                   CornerRadius="20" WidthRequest="320"
                   HasShadow="True">

                <VerticalStackLayout Spacing="15">

                    <Label Text="Create Your Account" 
                           FontSize="28" 
                           FontAttributes="Bold" 
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="10">

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <Entry Placeholder="First Name" 
                                   Text="{Binding FirstName}" 
                                   TextColor="Black" />
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <Entry Placeholder="Last Name" 
                                   Text="{Binding LastName}" 
                                   TextColor="Black" />
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <Entry Placeholder="Email" 
                                   Text="{Binding Email}" 
                                   Keyboard="Email" 
                                   TextColor="Black" />
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <DatePicker Date="{Binding BirthDate}" 
                                        TextColor="Black" 
                                        BackgroundColor="Transparent" />
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <Entry Placeholder="Password" 
                                   IsPassword="True" 
                                   Text="{Binding Password}" 
                                   TextColor="Black" />
                        </Frame>

                        <Frame BackgroundColor="White" CornerRadius="10" Padding="5">
                            <Entry Placeholder="Repeat Password" 
                                   IsPassword="True" 
                                   Text="{Binding RepeatPassword}" 
                                   TextColor="Black" />
                        </Frame>
                    </VerticalStackLayout>

                    <Button Text="Register" 
                            Command="{Binding RegisterCommand}" 
                            BackgroundColor="#FF6F61" 
                            TextColor="White"
                            FontAttributes="Bold" 
                            CornerRadius="15" 
                            HeightRequest="50"
                            HorizontalOptions="FillAndExpand" />

                    <Button Text="Already have an account? Login" 
                            Command="{Binding NavigateToLoginCommand}" 
                            BackgroundColor="Transparent" 
                            TextColor="White" 
                            FontAttributes="Bold" 
                            Padding="10"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
