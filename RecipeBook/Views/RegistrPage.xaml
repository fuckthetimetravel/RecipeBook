<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RecipeBook.Views.RegistrPage"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <VerticalStackLayout Grid.Row="1" Spacing="20" VerticalOptions="Center">
            <Label Text="Recipe Book" FontSize="32" HorizontalOptions="Center" FontAttributes="Bold" Margin="0,0,0,20"/>

            <Label Text="Create a new account" FontSize="18" HorizontalOptions="Center" Margin="0,0,0,20"/>

            <Entry Placeholder="Email" Text="{Binding Email}" Keyboard="Email" />

            <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True" />

            <Entry Placeholder="Confirm Password" Text="{Binding ConfirmPassword}" IsPassword="True" />

            <Button Text="Register" Command="{Binding RegisterCommand}" Margin="0,20,0,0" />

            <Label Text="{Binding ErrorMessage}" TextColor="Red" IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />

            <HorizontalStackLayout HorizontalOptions="Center" Spacing="5" Margin="0,20,0,0">
                <Label Text="Already have an account?" VerticalOptions="Center" />
                <Button Text="Login" Command="{Binding LoginCommand}" BackgroundColor="Transparent" TextColor="{StaticResource Primary}" Padding="0" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <ActivityIndicator Grid.RowSpan="3" IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}" HorizontalOptions="Center" VerticalOptions="Center" />
    </Grid>
</ContentPage>