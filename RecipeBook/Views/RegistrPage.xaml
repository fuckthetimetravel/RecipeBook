<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.RegistrPage"
             Title="Registration">

    <ContentPage.Resources>
        <converters:StringToBoolConverter x:Key="StringToBoolConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15" VerticalOptions="Center">
            <Image Source="app_icon.png" 
                   HeightRequest="100" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20" />

            <Label Text="Create Account" 
                   FontSize="24" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   Margin="0,0,0,20" />

            <!-- First Name -->
            <Label Text="First Name" FontAttributes="Bold" />
            <Entry Text="{Binding FirstName}" 
                   Placeholder="Enter your first name" />

            <!-- Last Name -->
            <Label Text="Last Name" FontAttributes="Bold" />
            <Entry Text="{Binding LastName}" 
                   Placeholder="Enter your last name" />

            <!-- Email -->
            <Label Text="Email" FontAttributes="Bold" />
            <Entry Text="{Binding Email}" 
                   Placeholder="Enter your email" 
                   Keyboard="Email" />

            <!-- Password -->
            <Label Text="Password" FontAttributes="Bold" />
            <Entry Text="{Binding Password}" 
                   Placeholder="Enter your password" 
                   IsPassword="True" />

            <!-- Confirm Password -->
            <Label Text="Confirm Password" FontAttributes="Bold" />
            <Entry Text="{Binding ConfirmPassword}" 
                   Placeholder="Confirm your password" 
                   IsPassword="True" />

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}" 
                   TextColor="Red" 
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}" />

            <!-- Sign Up Button -->
            <Button Text="Sign Up" 
                    Command="{Binding SignUpCommand}" 
                    BackgroundColor="#5B8C5A" 
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>