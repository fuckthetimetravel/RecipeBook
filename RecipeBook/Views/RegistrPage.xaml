<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.RegistrPage"
             Title="Registration"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="18"
                             VerticalOptions="Center">


            <Label Text="Create Account"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="{StaticResource PrimaryAccent}"
                   HorizontalOptions="Center" />

            <Frame Padding="10" BackgroundColor="{StaticResource CardBackground}" CornerRadius="16">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Profile Picture" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />

                    <Border Stroke="{StaticResource SecondaryAccent}" HeightRequest="200" WidthRequest="200">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="190" />
                        </Border.StrokeShape>
                        <Image Source="{Binding ProfileImageBase64, Converter={StaticResource Base64ToImageConverter}}"
                               IsVisible="{Binding ProfileImageBase64, Converter={StaticResource StringToBoolConverter}}" />
                    </Border>
                    <HorizontalStackLayout Spacing="10">
                        <Button Text="Pick Image"
                    Clicked="OnPickProfileImageClicked"
                    BackgroundColor="{StaticResource SecondaryAccent}"
                    TextColor="White"
                    CornerRadius="10" />

                        <Button Text="Take Photo"
                    Clicked="OnTakeProfilePhotoClicked"
                    BackgroundColor="{StaticResource PrimaryAccent}"
                    TextColor="White"
                    CornerRadius="10" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>


            <Frame Padding="15"
                   Margin="0,10,0,0"
                   BackgroundColor="{StaticResource CardBackground}"
                   CornerRadius="16"
                   HasShadow="True">

                <StackLayout Padding="15"
                             Spacing="18">
                    <!-- First Name -->
                    <Label Text="First Name"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}" />
                    <Entry Text="{Binding FirstName}"
                   Placeholder="Enter your first name"
                   TextColor="{StaticResource TextColor}"
                   HeightRequest="45" />

                    <!-- Last Name -->
                    <Label Text="Last Name"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}" />
                    <Entry Text="{Binding LastName}"
                   Placeholder="Enter your last name"
                   TextColor="{StaticResource TextColor}"
                   HeightRequest="45" />

                    <!-- Email -->
                    <Label Text="Email"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}" />
                    <Entry Text="{Binding Email}"
                   Placeholder="Enter your email"
                   Keyboard="Email"
                   TextColor="{StaticResource TextColor}"
                   HeightRequest="45" />

                    <!-- Password -->
                    <Label Text="Password"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}" />
                    <Entry Text="{Binding Password}"
                   Placeholder="Enter your password"
                   IsPassword="True"
                   TextColor="{StaticResource TextColor}"
                   HeightRequest="45" />

                    <!-- Confirm Password -->
                    <Label Text="Confirm Password"
                   FontAttributes="Bold"
                   TextColor="{StaticResource TextColor}" />
                    <Entry Text="{Binding ConfirmPassword}"
                   Placeholder="Confirm your password"
                   IsPassword="True"
                   TextColor="{StaticResource TextColor}"
                   HeightRequest="45" />

                    <!-- Error -->
                    <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   FontSize="14"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}" />
                </StackLayout>

            </Frame>


            <!-- Sign Up -->
            <Button Text="Sign Up"
                    Command="{Binding SignUpCommand}"
                    BackgroundColor="{StaticResource PrimaryAccent}"
                    TextColor="White"
                    CornerRadius="10"
                    HeightRequest="50"
                    Margin="0,10,0,0" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
