<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:RecipeBook.Converters"
             x:Class="RecipeBook.Views.AddRecipePage"
             x:Name="AddRecipePageView"
             BackgroundColor="{StaticResource BackgroundColor}">

    <ContentPage.Resources>
        <converters:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter" />
    </ContentPage.Resources>

    <ScrollView>
        <Grid RowDefinitions="Auto,*,Auto" Padding="20">
            <VerticalStackLayout Grid.Row="1" Spacing="20">
                <Label Text="Add New Recipe"
                       FontSize="24"
                       HorizontalOptions="Center"
                       FontAttributes="Bold"
                       TextColor="{StaticResource PrimaryAccent}" />

                <!-- Recipe Basic Info -->
                <VerticalStackLayout Spacing="10">
                    <Label Text="Recipe Title" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                    <Entry Placeholder="Enter recipe title"
                           Text="{Binding Title}"
                           TextColor="{StaticResource TextColor}" />

                    <Label Text="Description" FontAttributes="Bold" TextColor="{StaticResource TextColor}" Margin="0,10,0,0" />
                    <Editor Placeholder="Enter recipe description"
                            Text="{Binding Description}"
                            HeightRequest="100"
                            TextColor="{StaticResource TextColor}" />
                </VerticalStackLayout>

                <!-- Recipe Image -->
                <Frame Padding="15"
                       Margin="0,10,0,0"
                       BackgroundColor="{StaticResource CardBackground}"
                       CornerRadius="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Recipe Image"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SecondaryAccent}" />

                        <HorizontalStackLayout Spacing="10">
                            <Button Text="Pick Image"
                                    Command="{Binding PickImageCommand}"
                                    BackgroundColor="{StaticResource SecondaryAccent}"
                                    TextColor="White"
                                    CornerRadius="10" />
                            <Button Text="Take Photo"
                                    Command="{Binding TakePhotoCommand}"
                                    BackgroundColor="{StaticResource PrimaryAccent}"
                                    TextColor="White"
                                    CornerRadius="10" />
                        </HorizontalStackLayout>

                        <Image Source="{Binding SelectedImageBase64, Converter={StaticResource Base64ToImageConverter}}"
                               HeightRequest="200"
                               Aspect="AspectFill"
                               IsVisible="{Binding SelectedImageBase64, Converter={StaticResource StringNotEmptyConverter}}" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Ingredients Section -->
                <Frame Padding="15"
                       Margin="0,10,0,0"
                       BackgroundColor="{StaticResource CardBackground}"
                       CornerRadius="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Ingredients"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SecondaryAccent}" />

                        <CollectionView ItemsSource="{Binding Ingredients}" EmptyView="No ingredients added yet">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" Padding="0,5">
                                        <VerticalStackLayout Grid.Column="0">
                                            <Label Text="{Binding Name}" FontAttributes="Bold" TextColor="{StaticResource TextColor}" />
                                            <Label Text="{Binding Quantity}" TextColor="{StaticResource TextColor}" />
                                        </VerticalStackLayout>
                                        <Button Grid.Column="1"
                                                Text="Remove"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveIngredientCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="{StaticResource ButtonColor}"
                                                TextColor="White"
                                                CornerRadius="10" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <Grid ColumnDefinitions="*, Auto"
                              RowDefinitions="Auto, Auto, Auto"
                              Margin="0,10,0,0">
                            <Label Grid.Row="0" Grid.Column="0" Text="Ingredient Name" TextColor="{StaticResource TextColor}" />
                            <Entry Grid.Row="1" Grid.Column="0"
                                   Placeholder="Enter ingredient name"
                                   Text="{Binding NewIngredientName}"
                                   HeightRequest="40" />

                            <Label Grid.Row="0" Grid.Column="1" Text="Quantity" TextColor="{StaticResource TextColor}" />
                            <Entry Grid.Row="1" Grid.Column="1"
                                   Placeholder="Amount"
                                   Text="{Binding NewIngredientQuantity}"
                                   Margin="10,0,0,0"
                                   HeightRequest="40" />

                            <Button Grid.Row="2" Grid.ColumnSpan="2"
                                    Text="Add Ingredient"
                                    Command="{Binding AddIngredientCommand}"
                                    BackgroundColor="{StaticResource PrimaryAccent}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    Margin="0,10,0,0"
                                    HeightRequest="45" />
                        </Grid>
                    </VerticalStackLayout>
                </Frame>

                <!-- Steps Section -->
                <Frame Padding="15"
                       Margin="0,10,0,0"
                       BackgroundColor="{StaticResource CardBackground}"
                       CornerRadius="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="10">
                        <Label Text="Preparation Steps"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="{StaticResource SecondaryAccent}" />

                        <CollectionView ItemsSource="{Binding Steps}" EmptyView="No steps added yet">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" Padding="0,10">
                                        <Label Grid.Column="0"
                                               Text="{Binding Text}"
                                               TextColor="{StaticResource TextColor}" />
                                        <Button Grid.Column="1"
                                                Text="Remove"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.RemoveStepCommand}"
                                                CommandParameter="{Binding .}"
                                                BackgroundColor="{StaticResource ButtonColor}"
                                                TextColor="White"
                                                CornerRadius="10" />
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <VerticalStackLayout Spacing="10" Margin="0,10,0,0">
                            <Label Text="Step Description" TextColor="{StaticResource TextColor}" />
                            <Editor Placeholder="Describe this step"
                                    Text="{Binding NewStepText}"
                                    HeightRequest="100"
                                    TextColor="{StaticResource TextColor}" />

                            <Button Text="Add Step"
                                    Command="{Binding AddStepCommand}"
                                    BackgroundColor="{StaticResource SecondaryAccent}"
                                    TextColor="White"
                                    CornerRadius="10"
                                    HeightRequest="45" />
                        </VerticalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <Button Text="Save Recipe"
                        Command="{Binding SaveRecipeCommand}"
                        BackgroundColor="{StaticResource PrimaryAccent}"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        Margin="0,20,0,20" />

                <Label Text="{Binding ErrorMessage}"
                       TextColor="Red"
                       IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotEmptyConverter}}" />
            </VerticalStackLayout>

            <ActivityIndicator Grid.RowSpan="3"
                               IsRunning="{Binding IsBusy}"
                               IsVisible="{Binding IsBusy}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
        </Grid>
    </ScrollView>
</ContentPage>
